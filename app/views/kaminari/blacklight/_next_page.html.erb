<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% # HELIO-1989. May be removed when Blacklight changes are backported to Hyrax. -%>
<% if current_page.last? %>
    <li class="disabled">
      <%= link_to raw(t('views.pagination.next')), '#', rel: 'next', onclick: 'return false;', aria: { label: t('views.pagination.aria.go_to_next_page') } %>
    </li>
<% else %>
    <li>
      <%= link_to raw(t('views.pagination.next')), url, rel: 'next', remote: remote, aria: { label: t('views.pagination.aria.go_to_next_page') } %>
    </li>
<% end %>
