<%# Link to the "Previous" page
  - available local variables
    url:           url to the previous page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% # HELIO-1989. May be removed when Blacklight changes are backported to Hyrax. -%>
<% if current_page.first? %>
    <li class="disabled">
      <%= link_to raw(t('views.pagination.previous')), '#', rel: 'prev', onclick: 'return false;', aria: { label: t('views.pagination.aria.go_to_previous_page'), disabled: true } %>
    </li>
<% else %>
    <li>
      <%= link_to raw(t('views.pagination.previous')), url, rel: 'prev', remote: remote, aria: { label: t('views.pagination.aria.go_to_previous_page') } %>
    </li>
<% end %>

