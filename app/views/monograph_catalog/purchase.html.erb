<% provide :page_title, 'Purchase ' + @monograph_presenter.page_title %>
<div id="maincontent" class="monograph-purchase">
  <div class="back-link">
    <%= link_to "<< Go back to previous page", monograph_catalog_path(@monograph_presenter.id) %>
  </div>

  <div class="row">
    <div class="col-sm-7">
      <h1>Purchase access</h1>
      <div class="row">
        <div class="col-sm-12 purchase-msg lead">
          <%= @press_presenter.restricted_message&.html_safe %>
        </div>
      </div>
    </div>

    <div class="col-sm-4 col-sm-offset-1">
      <h2>The book you're looking for:</h2>
      <div class="row">
        <div class="col-sm-3">
          <% if @monograph_presenter.representative_id.present? %>
            <%= @monograph_presenter.thumbnail_tag(225, class: "img-fluid") %>
          <% else %>
            <%= @monograph_presenter.thumbnail_tag(225) %>
          <% end %>
        </div>
        <div class="col-sm-9">
          <%= @monograph_presenter.title %>
        </div>
      </div>
    </div>
  </div>
</div>

