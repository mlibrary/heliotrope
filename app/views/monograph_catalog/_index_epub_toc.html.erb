<% level = 0 %>
    <% @monograph_presenter.epub_presenter.sections.each do |section| %>
      <% if section.level > level %>
        <% level += 1 %>
        <ol class="row toc section">
          <li class="col-sm-12">
      <% elsif section.level == level %>
        </li>
        <li class="col-sm-12">
      <% else %>
        </li>
        <% while section.level < level %>
          <% level -= 1 %>
          </ol>
        </li>
        <% end %>
        <li class="col-sm-12">
      <% end %>
      <a href="<%= epub_path(id: @monograph_presenter.epub_id, anchor: section.cfi + "/4/1:0") %>"><%= section.title %></a>
      <% if section.downloadable? %>
        <span class="download">
          <a class="btn btn-default btn-sm" href="<%= epub_download_section_path(id: @monograph_presenter.epub_id, cfi: section.cfi) %>" data-turbolinks="false">
            <i id="download" class="oi" data-glyph="data-transfer-download" title="Download section" aria-hidden="true"></i>
            Download
          </a>
          <a class="btn btn-default btn-sm" href="<%= epub_path(id: @monograph_presenter.epub_id, anchor: section.cfi + "/4/1:0") %>"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Read</a>
        </span>
      <% end %>
    <% end %>
  </li>
</ol>
