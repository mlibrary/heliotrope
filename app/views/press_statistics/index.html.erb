<% provide :page_title, "#{@press.name} Statistics" %>
<% provide :page_class, 'press' %>
<% ga_url = @press.google_analytics_url %>
<% map_url = @press.readership_map_url %>

<%= render 'shared/breadcrumbs' %>

    <div class="col-sm-12" id="tabs">
      <ul class="nav nav-tabs" role="tablist">
        <% if map_url.present? %>
          <li role="presentation">
            <h2><a id="tab-map-press-stats" href="#map" aria-controls="map-press-stats" role="tab" data-toggle="tab" aria-selected="false" aria-expanded="false" tabindex="-1">Readership Map</a></h2>
          </li>
        <% end %>
        <% if ga_url.present? %>
          <li role="presentation">
            <h2><a id="tab-analytics-press-stats" href="#analytics" aria-controls="analytics-press-stats" role="tab" data-toggle="tab" aria-selected="false" aria-expanded="false" tabindex="-1">Google Analytics</a></h2>
          </li>
        <% end %>
      </ul>
      <div id="tabs-content" class="tab-content" aria-live="polite">
        <% if map_url.present? %>
          <section id="map" class="tab-pane fade row" role="tabpanel" aria-hidden="true" aria-labelledby="tab-map-press-stats" tabindex="0">
            <% if @press.subdomain == 'michigan' %>
              <p class="press-stats-text">
                The Readership Map replays every view or download of books or media components that occurred the previous day.
              </p>
            <% end %>
            <div class="panel panel-default">
              <div class="panel-body">
                <div id="map-wrapper" class="iframe-container">
                  <iframe src="<%= map_url %>" id="map_iframe" class=".embed-responsive-item"></iframe>
                </div>
              </div>
            </div>
          </section>
        <% end %>
        <% if ga_url.present? %>
          <section id="analytics" class="tab-pane fade row" role="tabpanel" aria-hidden="true" aria-labelledby="tab-analytics-press-stats" tabindex="0">
            <div class="col-sm-12">
              <% if @press.subdomain == 'michigan' %>
                <p class="press-stats-text">
                  The Google Analytics report shows basic usage data including users, sessions, pageviews, popular titles, and user location.
                </p>
              <% end %>
              <div class="panel panel-default">
                <div class="panel-body">
                  <div class="iframe-container">
                    <iframe src="<%= ga_url %>" id="ga_iframe" class=".embed-responsive-item"></iframe>
                  </div>
                </div>
              </div>
            </div>
          </section>
        <% end %>
      </div>
    </div>
