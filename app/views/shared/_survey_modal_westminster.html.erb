<!-- survey -->
<div id="surveyWestminsterModal" class="modal fade survey" tabindex="-1" role="dialog" aria-labelledby="surveyModalLabel">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">        
        <h4 class="modal-title" id="surveyModalLabel">Share the story of what Open Access means to you</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="survey_button_no()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= image_tag 'oa-lock-logo-lg.png', alt: 'a graphic of a lock that is open, the universal logo for open access'  %>
        <p>Westminster University Press needs your feedback to better understand how readers are using openly available ebooks. You can help by taking a short, privacy-friendly survey.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-lg" data-dismiss="modal" onclick="survey_button_yes()">Yes, I can help</button>
        <button type="button" class="btn btn-default btn-lg" data-dismiss="modal" onclick="survey_button_no()">No thanks</button>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  function survey_button_yes(){
    Cookies.set('survey_westminster', 'clicked', { expires: 365<%= ', secure: true' if Rails.env == 'production' %> });
    window.open("https://umich.qualtrics.com/jfe/form/SV_bq37RieqgU57nkG?publisher=<%= @monograph_presenter.subdomain %>&title=<%= @monograph_presenter.title %>", "_blank");
  }
  function survey_button_no(){
    Cookies.set('survey_westminster', 'ignore', { expires: 180<%= ', secure: true' if Rails.env == 'production' %> });
  }
</script>
