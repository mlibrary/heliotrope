<% provide :body do %>

  <%= render 'shared/header' %>
  <%= render 'shared/flash_message' %>

  <div id="main" role="main" class="container <%= yield(:page_class) if content_for?(:page_class)%>">
  <% if content_for?(:page_header) %>
    <div class="row">
      <div class="col-md-12 main-header ">
        <%= yield(:page_header) %>
      </div>
    </div>
  <% end %>

    <%= content_for?(:main) ? yield(:main) : yield %>
  </div>
  <% if press_presenter.present? %>
    <% if %w[leverpress amherst barpublishing heb michigan bridwell bigten aperio aberdeenunipress vermont].include? press_presenter.subdomain %>
      <%= render 'shared/brand_press_footer_custom' %>
    <% else %>
      <%= render 'shared/brand_press_footer' %>
    <% end %>
  <% elsif @skip_footer.blank? %>
    <%= render 'shared/footer'  %>
  <% end %>

<% end %>

<%= render template: 'layouts/boilerplate' %>
