    <%= javascript_include_tag 'embed' %>

    <!-- hotjar -->
    <%= render 'shared/hotjar' %>
    <!-- GA4 -->
    <%= render 'shared/ga4' %>

    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>
  </head>
  <body <%= 'class="embedded-leaflet-map"'.html_safe if @presenter.image? || @presenter.interactive_map? %>>
    <% if Settings.host == "heliotrope-preview.hydra.lib.umich.edu" %>
