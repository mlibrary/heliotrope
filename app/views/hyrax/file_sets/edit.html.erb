<% provide :page_title, curation_concern_page_title(curation_concern) %>
<% provide :page_header do %>
<div class="row">
  <div class="col-xs-12 col-sm-12">
    <h1><span class="fa fa-edit" aria-hidden="true"></span><%= t('.header', file_set: curation_concern) %></h1>
  </div>
</div>
<% end %>

<br />
<br />
<div class="row">
  <div class="col-xs-12 col-sm-4">
    <div class="restricted-width-media-display">
      <%= media_display curation_concern.to_presenter %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-8">
    <ul class="nav nav-tabs" role="tablist">
      <li id="edit_descriptions_link" class="nav-item">
        <a href="#descriptions_display" class="nav-link active" data-toggle="tab"><i class="fa fa-tags"></i> Descriptions</a>
      </li>
      <li id="edit_versioning_link" class="nav-item">
        <a href="#versioning_display" class="nav-link" data-toggle="tab"><i class="fa fa-sitemap"></i> Versions</a>
      </li>
      <li id="edit_permissions_link" class="nav-item">
        <a href="#permissions_display" class="nav-link" data-toggle="tab"><i class="fa fa-key"></i> Permissions</a>
      </li>
      <li id="edit_thumbnail_link" class="nav-item">
        <a href="#thumbnail_display" class="nav-link" data-toggle="tab"><i class="fa fa-image"></i> Thumbnail</a>
      </li>
    </ul>
    <div class="tab-content">
      <div id="descriptions_display" class="tab-pane active">
        <h2>Descriptions </h2>
        <%= render "form" %>
      </div>
      <%= render "permission", file_set: curation_concern, form_object: @form %>
      <%= render "versioning", file_set: curation_concern %>
      <%= render "thumbnail", file_set: curation_concern %>
    </div>
  </div><!-- /.col-sm-8 -->
</div><!-- /.row -->
