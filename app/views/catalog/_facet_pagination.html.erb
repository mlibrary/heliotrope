<div class="prev_next_links btn-group pull-left">
  <%= link_to_previous_page @pagination, raw(t('views.pagination.previous')), params: search_state.to_h, param_name: blacklight_config.facet_paginator_class.request_keys[:page], class: 'btn btn-link', data: { blacklight_modal: "preserve" } do %>
    <%= content_tag :span, raw(t('views.pagination.previous')), class: 'disabled btn btn-disabled', 'aria-hidden' => 'true' %>
  <% end %>

  <%= link_to_next_page @pagination, raw(t('views.pagination.next')), params: search_state.to_h, param_name: blacklight_config.facet_paginator_class.request_keys[:page], class: 'btn btn-link',  data: { blacklight_modal: "preserve" } do %>
    <%= content_tag :span, raw(t('views.pagination.next')), class: 'disabled btn btn-disabled', 'aria-hidden' => 'true' %>
  <% end %>
</div>

<div class="sort_options btn-group pull-right" role="tablist">
  <% if @pagination.sort == 'index' -%>
    <span class="active az btn btn-default" role="tab" aria-selected="true"><%= facet_pagination_sort_index_label(@facet) %></span>
    <%= link_to(facet_pagination_sort_count_label(@facet),
                @pagination.params_for_resort_url('count', search_state.to_h),
                class: "sort_change numeric btn btn-default",
                data: { blacklight_modal: "preserve" },
                role: 'tab',
                'aria-selected': false) %>
  <% elsif @pagination.sort == 'count' -%>
    <%=  link_to(facet_pagination_sort_index_label(@facet),
                 @pagination.params_for_resort_url('index', search_state.to_h),
                 class: "sort_change az btn btn-default",
                 data: { blacklight_modal: "preserve" },
                 role: 'tab',
                 'aria-selected': false) %>
    <span class="active numeric btn btn-default" role="tab" aria-selected="true"><%= facet_pagination_sort_count_label(@facet) %></span>
  <% end -%>
</div>
