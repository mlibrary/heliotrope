<p id="notice"><%= notice %></p>
<div id="maincontent">
  <h1>Institution</h1>
  <div class="row">
    <div class="col-md-2"><em>ID</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.id %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Identifier</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.identifier %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Name</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.name %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Display Name</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.display_name %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Entity&nbsp;ID</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.entity_id %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Security Domain</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.security_domain %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Catalog URL</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.catalog_url %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Link Resolver URL</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.link_resolver_url %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Location</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.location %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Login</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.login %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Horizontal Logo</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.horizontal_logo %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Vertical Logo</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.vertical_logo %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>ROR ID</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.ror_id %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Site</em></div>
    <div class="col-md-10">&nbsp;<%= @institution.site %></div>
  </div>
  <div class="row">
    <div class="col-md-12"><hr/></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Affiliations</em></div>
    <div class="col-md-10">&nbsp;<%= link_to @institution.institution_affiliations.count, greensub_institution_inst_affiliations_path(@institution) %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Licenses</em></div>
    <div class="col-md-10">&nbsp;<%= link_to @institution.licenses.count, greensub_institution_licenses_path(@institution) %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Products</em></div>
    <div class="col-md-10">&nbsp;<%= link_to @institution.products.count, greensub_institution_products_path(@institution) %></div>
  </div>
  <div class="row">
    <div class="col-md-12"><hr/></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to_if @institution.update?, 'Edit', edit_greensub_institution_path(@institution) %>
      <span> | </span>
      <%= link_to 'Back', greensub_institutions_path %>
      <span> | </span>
      <%= link_to_if @institution.destroy?, 'Destroy', greensub_institution_path(@institution), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
