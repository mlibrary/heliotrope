<%= simple_form_for @product do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :identifier %>
  </div>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :purchase %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
