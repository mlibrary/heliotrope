<p id="notice"><%= notice %></p>
<div id="maincontent">
  <h1>Lessees</h1>
    <b>
      <div class="col-md-12">
        <div class="col-md-1">ID</div>
        <div class="col-md-3">Identifier</div>
        <div class="col-md-4">Individual</div>
        <div class="col-md-4">Institution</div>
      </div>
      <div class="col-md-12"><hr/></div>
    </b>
  <% @lessees.each do |lessee| %>
    <div class="col-md-12">
      <div class="col-md-1"><%= lessee.id %></div>
      <div class="col-md-3"><%= lessee.identifier %></div>
      <div class="col-md-4">&nbsp<%= link_to_if lessee.individual?, lessee.individual&.name, lessee.individual %></div>
      <div class="col-md-4">&nbsp<%= link_to_if lessee.institution?, lessee.institution&.name, lessee.institution %></div>
    </div>
  <% end %>
  <div class="col-md-12">&nbsp<%= paginate @lessees %></div>
</div>
