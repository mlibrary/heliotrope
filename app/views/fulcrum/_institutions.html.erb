<%
  institutions = Institution.filter(identifier_like: params[:identifier_like], name_like: params[:name_like], entity_id_like: params[:entity_id_like]).order(identifier: :asc).page(params[:page])
  size = 12
%>
<h1>Institutions</h1>
<form name="filter" method="get" action="<%= fulcrum_partials_path(:institutions) %>">
  <table class="table table-striped" summary="Institution List">
    <tr>
      <th><%= link_to(new_institution_path) do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
        <% end %>
      </th>
      <th><label for="identifier_like">Identifier</label></th>
      <th><label for="name_like">Name</label></th>
      <th><label for="entity_id_like">Entity ID</label></th>
      <th>Policies</th>
    </tr>
    <tr>
      <td><button name="submit" type="submit" value="filter">Filter</button></td>
      <td><input type="text" name="identifier_like" value="<%= params[:identifier_like] %>" size="<%= size %>" aria-label="identifier_like"></td>
      <td><input type="text" name="name_like" value="<%= params[:name_like] %>" size="<%= 2 * size %>" aria-label="name_like"></td>
      <td><input type="text" name="entity_id_like" value="<%= params[:entity_id_like] %>" size="<%= 3 * size %>" aria-label="entity_id_like"></td>
      <td></td>
    </tr>
    <% institutions.each do |institution| %>
      <tr>
        <td><%= link_to(fulcrum_partial_path(:institutions, Base64.urlsafe_encode64(institution.identifier))) do %>
            <span class="glyphicon glyphicon-sunglasses" aria-hidden="true"></span> Show
          <% end %>
        </td>
        <td><%= institution.identifier %></td>
        <td><%= institution.name %></td>
        <td><%= link_to institution.entity_id, institution.entity_id %></td>
        <td><%= institution.policies.count() %></td>
      </tr>
    <% end %>
  </table>
</form>
<%= paginate institutions %>
